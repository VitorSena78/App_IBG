<?xml version="1.0" encoding="utf-8"?>
<!-- item_paciente.xml - Versão melhorada com indicadores de sincronização -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:cardBackgroundColor="@android:color/white"
    app:rippleColor="@color/primary"
    android:clickable="true"
    android:focusable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Indicador de status de sincronização -->
        <View
            android:id="@+id/sync_status_indicator"
            android:layout_width="4dp"
            android:layout_height="0dp"
            android:background="@color/sync_success"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/layout_chips"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Avatar com iniciais -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_avatar"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/sync_status_indicator">

            <TextView
                android:id="@+id/tv_iniciais"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="AB" />

            <!-- Indicador de sincronização no avatar -->
            <ImageView
                android:id="@+id/iv_sync_indicator"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="bottom|end"
                android:layout_margin="2dp"
                android:background="@drawable/circle_white_bg"
                android:src="@drawable/ic_sync_problem"
                android:visibility="gone"
                app:tint="@color/sync_error" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Informações principais -->
        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@id/card_avatar"
            app:layout_constraintBottom_toBottomOf="@id/card_avatar"
            app:layout_constraintStart_toEndOf="@id/card_avatar"
            app:layout_constraintEnd_toStartOf="@id/btn_menu">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_nome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="João Silva Santos" />

                <!-- Chip de status de sincronização -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_sync_status"
                    style="@style/Widget.MaterialComponents.Chip.Action"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginStart="8dp"
                    android:text="Pendente"
                    android:textSize="10sp"
                    android:visibility="gone"
                    app:chipBackgroundColor="@color/sync_pending"
                    app:chipStrokeWidth="0dp"
                    app:chipCornerRadius="12dp"
                    app:chipMinHeight="24dp"
                    tools:visibility="visible" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_calendar"
                    app:tint="@android:color/darker_gray"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tv_idade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:alpha="0.8"
                    tools:text="45 anos" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/circle_dot"
                    android:alpha="0.5" />

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@drawable/ic_phone"
                    app:tint="@android:color/darker_gray"
                    android:alpha="0.7" />

                <TextView
                    android:id="@+id/tv_telefone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp"
                    android:alpha="0.8"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="(11) 99999-9999" />

            </LinearLayout>

        </LinearLayout>

        <!-- Menu de opções -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_menu"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:padding="0dp"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:icon="@drawable/ic_more_vert"
            app:iconTint="@android:color/darker_gray"
            app:iconPadding="0dp"
            app:iconGravity="textStart"
            app:cornerRadius="20dp"
            app:layout_constraintTop_toTopOf="@id/card_avatar"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Chips de informações extras -->
        <LinearLayout
            android:id="@+id/layout_chips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@id/card_avatar"
            app:layout_constraintStart_toEndOf="@id/sync_status_indicator"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_cpf"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="CPF: 000.000.000-00"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/chip_background"
                app:chipStrokeWidth="0dp"
                app:chipIcon="@drawable/ic_badge"
                app:chipIconTint="@color/primary"
                app:chipCornerRadius="12dp"
                tools:text="CPF: 123.456.789-00" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_sus"
                style="@style/Widget.MaterialComponents.Chip.Action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUS"
                android:textSize="12sp"
                app:chipBackgroundColor="@color/chip_background"
                app:chipStrokeWidth="0dp"
                app:chipIcon="@drawable/ic_medical_services"
                app:chipIconTint="@color/primary"
                app:chipCornerRadius="12dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>